<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@drawable/gradient">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate Us!"
                    android:textColor="#fff"
                    android:textSize="20dp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/stars"
            android:layout_below="@id/toolbar"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_unmarked"
                android:id="@+id/star1"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star_unmarked"
                android:id="@+id/star2"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/star_unmarked"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="90dp"
                android:id="@+id/star3"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star_unmarked"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="150dp"
                android:id="@+id/star4"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_unmarked"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="200dp"
                android:id="@+id/star5"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/stars0"
            android:layout_below="@id/toolbar"
            android:gravity="center">

            <ImageView
                android:id="@+id/star10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/star_marked"
                android:layout_alignParentStart="true"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star_marked"
                android:id="@+id/star20"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/star_marked"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="90dp"
                android:id="@+id/star30"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star_marked"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="150dp"
                android:id="@+id/star40"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_marked"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="200dp"
                android:id="@+id/star50"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/avgRatingLL"
            android:layout_below="@id/stars"
            android:orientation="horizontal"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="16dp"
                android:id="@+id/avgRatingTV"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text=": Average Rating till now!"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avgRatingLL"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp">
            <Button
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:layout_marginEnd="5dp"
                android:text="Cancel"
                android:textColor="#fff"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:layout_marginStart="5dp"
                android:text="Submit"
                android:textColor="#fff"
                android:textSize="15dp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>